

<div class="row">
  <div class="col-md-7">

    <h1><%= image_tag(@idea.picture_url, :width => 400) if @idea.picture.present? %></h1>
  </div>

  <div class="col-md-">
    <p><%= @idea.name %></p>
    <p><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-warning" %>
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %>
      <%= link_to 'Back', ideas_path, class: "btn btn-info" %>
    </p>
  </div>
</div>
<h3>Comments</h3>
  <% @comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br />
      <p><%= comment.body %></p>
      <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  <% end %>
<%= render partial: 'comments/form', locals: { comment: @comment } %>

